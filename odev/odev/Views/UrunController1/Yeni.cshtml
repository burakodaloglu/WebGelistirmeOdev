@model odev.Models.Urun

@{
    ViewData["Title"] = "Yeni";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Ürün Ekle</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Yeni">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ürün_Adı" class="control-label"></label>
                <input asp-for="Ürün_Adı" class="form-control" />
                <span asp-validation-for="Ürün_Adı" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ürün_kodu" class="control-label"></label>
                <input asp-for="Ürün_kodu" class="form-control" />
                <span asp-validation-for="Ürün_kodu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fiyatı" class="control-label"></label>
                <input asp-for="Fiyatı" class="form-control" />
                <span asp-validation-for="Fiyatı" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Türü" class="control-label"></label>
                <input asp-for="Türü" class="form-control" />
                <span asp-validation-for="Türü" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Liste">Geri Dön</a>
</div>

